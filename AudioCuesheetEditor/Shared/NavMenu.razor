@inherits BaseLocalizedComponent

@inject IStringLocalizer<NavMenu> _localizer
@inject IDialogService _dialogService

<MudNavMenu>
    <MudNavGroup Title="@_localizer["Edit"]" Icon="@Icons.Material.Outlined.History">
        <MudNavLink Icon="@Icons.Material.Outlined.Undo" Disabled="!TraceChangeManager.CanUndo" OnClick="() => TraceChangeManager.Undo()">@_localizer["Undo"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Outlined.Redo" Disabled="!TraceChangeManager.CanRedo" OnClick="() => TraceChangeManager.Redo()">@_localizer["Redo"]</MudNavLink>
    </MudNavGroup>
    <MudNavGroup Title="@_localizer["Export"]" Icon="@Icons.Material.Outlined.FileDownload">
        <MudNavLink Icon="@Icons.Material.Outlined.AudioFile">@_localizer["Cuesheetfile"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Outlined.FileCopy" OnClick="() => _dialogService.Show<DownloadProjectfileDialog>(null, DownloadProjectfileDialogOptions)">@_localizer["Projectfile"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Outlined.ImportExport">@_localizer["Other"]</MudNavLink>
    </MudNavGroup>
</MudNavMenu>

@code {
    //TODO: Export should be visible all time (like in a FAB or something)
    private readonly DialogOptions DownloadProjectfileDialogOptions = new() { BackdropClick = false, CloseButton = true };
