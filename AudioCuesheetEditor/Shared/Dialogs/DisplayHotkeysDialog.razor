@inherits BaseLocalizedComponent

@inject IStringLocalizer<DisplayHotkeysDialog> _localizer

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6"><b>@_localizer["Common"]</b></MudText>
        <MudGrid>
            <MudItem md="12" lg="6">
                <MudStack Row AlignItems="AlignItems.Baseline" Justify="Justify.SpaceBetween">
                    <MudText>@_localizer["Undo the last edit"]</MudText>
                    <MudChip T="string" Variant="Variant.Text">@_localizer["Ctrl + z"]</MudChip>
                </MudStack>
            </MudItem>
            <MudItem md="12" lg="6">
                <MudStack Row AlignItems="AlignItems.Baseline" Justify="Justify.SpaceBetween">
                    <MudText>@_localizer["Redo the last edit"]</MudText>
                    <MudChip T="string" Variant="Variant.Text">@_localizer["Ctrl + y"]</MudChip>
                </MudStack>
            </MudItem>
            <MudItem md="12" lg="6">
                <MudStack Row AlignItems="AlignItems.Baseline" Justify="Justify.SpaceBetween">
                    <MudText>@_localizer["Navigate to help"]</MudText>
                    <MudChip T="string" Variant="Variant.Text">@_localizer["Ctrl + h"]</MudChip>
                </MudStack>
            </MudItem>
        </MudGrid>
        <MudText Typo="Typo.h6"><b>@_localizer["Audio"]</b></MudText>
        <MudGrid>
            <MudItem md="12" lg="6">
                <MudStack Row AlignItems="AlignItems.Baseline" Justify="Justify.SpaceBetween">
                    <MudText>@_localizer["Start/pause playback"]</MudText>
                    <MudStack Row AlignItems="AlignItems.Baseline">
                        <MudChip T="string" Variant="Variant.Text">@_localizer["Ctrl + p"]</MudChip>
                        <MudChip T="string" Variant="Variant.Text">@_localizer["MediaPlayPause"]</MudChip>
                    </MudStack>
                </MudStack>
            </MudItem>
            <MudItem md="12" lg="6">
                <MudStack Row AlignItems="AlignItems.Baseline" Justify="Justify.SpaceBetween">
                    <MudText>@_localizer["Jump to previous track"]</MudText>
                    <MudStack Row AlignItems="AlignItems.Baseline">
                        <MudChip T="string" Variant="Variant.Text">@_localizer["Ctrl + Left"]</MudChip>
                        <MudChip T="string" Variant="Variant.Text">@_localizer["MediaTrackPrevious"]</MudChip>
                    </MudStack>
                </MudStack>
            </MudItem>
            <MudItem md="12" lg="6">
                <MudStack Row AlignItems="AlignItems.Baseline" Justify="Justify.SpaceBetween">
                    <MudText>@_localizer["Jump to next track"]</MudText>
                    <MudStack Row AlignItems="AlignItems.Baseline">
                        <MudChip T="string" Variant="Variant.Text">@_localizer["Ctrl + Right"]</MudChip>
                        <MudChip T="string" Variant="Variant.Text">@_localizer["MediaTrackNext"]</MudChip>
                    </MudStack>
                </MudStack>
            </MudItem>
            <MudItem md="12" lg="6">
                <MudStack Row AlignItems="AlignItems.Baseline" Justify="Justify.SpaceBetween">
                    <MudText>@_localizer["Stop playback"]</MudText>
                    <MudStack Row AlignItems="AlignItems.Baseline">
                        <MudChip T="string" Variant="Variant.Text">@_localizer["Ctrl + b"]</MudChip>
                        <MudChip T="string" Variant="Variant.Text">@_localizer["MediaStop"]</MudChip>
                    </MudStack>
                </MudStack>
            </MudItem>
        </MudGrid>
    </DialogContent>
</MudDialog>

