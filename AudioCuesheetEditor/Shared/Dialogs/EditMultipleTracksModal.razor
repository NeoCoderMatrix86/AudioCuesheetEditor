@inherits BaseLocalizedComponent

@inject IStringLocalizer<EditMultipleTracksModal> _localizer
@inject ApplicationOptionsTimeSpanParser _applicationOptionsTimeSpanParser
@inject AutocompleteManager _autocompleteManager
@inject ValidationService _validationService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">@_localizer["Edit tracks"]</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="EditedTrack">
            <MudGrid Class="align-baseline">
                <MudItem xs="4" sm="3"><MudText>@_localizer["Change"]</MudText></MudItem>
                <MudItem xs="8" sm="9"><MudText>@_localizer["Value"]</MudText></MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackIsLinkedToPreviousTrack" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9"><MudSwitch @bind-Value="EditedTrack.IsLinkedToPreviousTrack" Label="@_localizer["Link to previous track"]" Color="Color.Primary" Disabled="editModeTrackIsLinkedToPreviousTrack == DynamicEditValue.DoNotChange" /></MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackPosition" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueAdd"><MudIcon Icon="@Icons.Material.Filled.Add" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueSubstract"><MudIcon Icon="@Icons.Material.Filled.Remove" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9">
                    <MudTextField @bind-Value="EditedTrack.Position" Label="@_localizer["Position"]" Variant="Variant.Outlined" Disabled="editModeTrackPosition == DynamicEditValue.DoNotChange" Error="!String.IsNullOrEmpty(GetValidationErrorMessage(editModeTrackPosition != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Position)))"
                                  ErrorText="@GetValidationErrorMessage(editModeTrackPosition != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Position))" />
                </MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackArtist" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9">
                    @{
                        MusicBrainzArtist? autocompleteArtist = new()
                        {
                            Name = EditedTrack.Artist
                        };
                    }
                    <MudAutocomplete T="MusicBrainzArtist" Label="@_localizer["Artist"]" Variant="Variant.Outlined" SearchFunc="_autocompleteManager.SearchArtistsAsync" ToStringFunc="(value) => value.Name"
                                     @bind-Text="EditedTrack.Artist" @bind-Value="autocompleteArtist" Clearable ShowProgressIndicator Disabled="editModeTrackArtist == DynamicEditValue.DoNotChange"
                                     Error="!String.IsNullOrEmpty(GetValidationErrorMessage(editModeTrackArtist != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Artist)))" ErrorText="@GetValidationErrorMessage(editModeTrackArtist != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Artist))"
                                     MaxItems="null" CoerceText="false">
                        <ItemTemplate Context="autocompleteContext">
                            <MudText>@autocompleteContext.Name</MudText>
                            @if (autocompleteContext.Disambiguation != null)
                            {
                                <MudSpacer />
                                <MudText Typo="Typo.subtitle2" Color="Color.Secondary">@autocompleteContext.Disambiguation</MudText>
                            }
                        </ItemTemplate>
                    </MudAutocomplete>
                </MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackTitle" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9">
                    @{
                        MusicBrainzTrack? autocompleteTrack = new()
                        {
                            Artist = EditedTrack.Artist,
                            Title = EditedTrack.Title
                        };
                    }
                    <MudAutocomplete T="MusicBrainzTrack" Label="@_localizer["Title"]" Variant="Variant.Outlined" SearchFunc="(value, token) => _autocompleteManager.SearchTitlesAsync(value, EditedTrack.Artist, token)" ToStringFunc="(value) => value.Title"
                                     @bind-Text="EditedTrack.Title" @bind-Value="autocompleteTrack" Clearable ShowProgressIndicator Disabled="editModeTrackTitle == DynamicEditValue.DoNotChange"
                                     Error="!String.IsNullOrEmpty(GetValidationErrorMessage(editModeTrackTitle != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Title)))" ErrorText="@GetValidationErrorMessage(editModeTrackTitle != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Title))"
                                     MaxItems="null" CoerceText="false">
                        <ItemTemplate Context="autocompleteContext">
                            <MudText>@autocompleteContext.Title</MudText>
                            @if (autocompleteContext.Disambiguation != null)
                            {
                                <MudSpacer />
                                <MudText Typo="Typo.subtitle2" Color="Color.Secondary">@autocompleteContext.Disambiguation</MudText>
                            }
                        </ItemTemplate>
                    </MudAutocomplete>
                </MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackBegin" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueAdd"><MudIcon Icon="@Icons.Material.Filled.Add" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueSubstract"><MudIcon Icon="@Icons.Material.Filled.Remove" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9">
                    <MudTextField Label="@_localizer["Begin"]" Variant="Variant.Outlined" Value="@EditedTrack.Begin.ToString()" ValueChanged="(string value) => _applicationOptionsTimeSpanParser.TimespanTextChanged<Track, TimeSpan?>(EditedTrack, x => x.Begin, value)"
                                  Disabled="editModeTrackBegin == DynamicEditValue.DoNotChange" Error="!String.IsNullOrEmpty(GetValidationErrorMessage(editModeTrackBegin != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Begin)))"
                                  ErrorText="@GetValidationErrorMessage(editModeTrackBegin != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Begin))" />
                </MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackEnd" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueAdd"><MudIcon Icon="@Icons.Material.Filled.Add" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueSubstract"><MudIcon Icon="@Icons.Material.Filled.Remove" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9">
                    <MudTextField Label="@_localizer["End"]" Variant="Variant.Outlined" Value="@EditedTrack.End.ToString()" ValueChanged="(string value) => _applicationOptionsTimeSpanParser.TimespanTextChanged<Track, TimeSpan?>(EditedTrack, x => x.End, value)" 
                                  Disabled="editModeTrackEnd == DynamicEditValue.DoNotChange" Error="!String.IsNullOrEmpty(GetValidationErrorMessage(editModeTrackEnd != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.End)))"
                                  ErrorText="@GetValidationErrorMessage(editModeTrackEnd != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.End))" />
                </MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackLength" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueAdd"><MudIcon Icon="@Icons.Material.Filled.Add" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueSubstract"><MudIcon Icon="@Icons.Material.Filled.Remove" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9">
                    <MudTextField Label="@_localizer["Length"]" Variant="Variant.Outlined" Value="@EditedTrack.Length.ToString()" ValueChanged="(string value) => _applicationOptionsTimeSpanParser.TimespanTextChanged<Track, TimeSpan?>(EditedTrack, x => x.Length, value)" 
                                  Disabled="editModeTrackLength == DynamicEditValue.DoNotChange" Error="!String.IsNullOrEmpty(GetValidationErrorMessage(editModeTrackLength != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Length)))"
                                  ErrorText="@GetValidationErrorMessage(editModeTrackLength != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.Length))" />
                </MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackFlags" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9">
                    <MudField Label="@_localizer["Flags"]" Variant="Variant.Outlined">
                        <MudChipSet T="Flag" SelectedValues="EditedTrack.Flags.ToList().AsReadOnly()" SelectedValuesChanged="(newFlags) => EditedTrack.Flags = newFlags" CheckMark SelectionMode="SelectionMode.MultiSelection" Variant="Variant.Text" Color="Color.Info" Disabled="editModeTrackFlags == DynamicEditValue.DoNotChange">
                            @foreach (var flag in Flag.AvailableFlags)
                            {
                                <MudChip Value="flag">@flag.Name</MudChip>
                            }
                        </MudChipSet>
                    </MudField>
                </MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackPregap" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueAdd"><MudIcon Icon="@Icons.Material.Filled.Add" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueSubstract"><MudIcon Icon="@Icons.Material.Filled.Remove" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9">
                    <MudTextField Label="@_localizer["PreGap"]" Variant="Variant.Outlined" Value="@EditedTrack.PreGap.ToString()" ValueChanged="(string value) => _applicationOptionsTimeSpanParser.TimespanTextChanged<Track, TimeSpan?>(EditedTrack, x => x.PreGap, value)" 
                                  Disabled="editModeTrackPregap == DynamicEditValue.DoNotChange" Error="!String.IsNullOrEmpty(GetValidationErrorMessage(editModeTrackPregap != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.PreGap)))"
                                  ErrorText="@GetValidationErrorMessage(editModeTrackPregap != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.PreGap))" />
                </MudItem>
                <MudFlexBreak />
                <MudItem xs="4" sm="3">
                    <MudSelect @bind-Value="editModeTrackPostgap" Variant="Variant.Outlined" Modal>
                        <MudSelectItem Value="DynamicEditValue.DoNotChange"><MudIcon Icon="@Icons.Material.Filled.DoDisturb" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueEquals"><MudIcon Icon="@Icons.Material.Filled.Check" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueAdd"><MudIcon Icon="@Icons.Material.Filled.Add" Style="height: 14px;" /></MudSelectItem>
                        <MudSelectItem Value="DynamicEditValue.EnteredValueSubstract"><MudIcon Icon="@Icons.Material.Filled.Remove" Style="height: 14px;" /></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" sm="9">
                    <MudTextField Label="@_localizer["PostGap"]" Variant="Variant.Outlined" Value="@EditedTrack.PostGap.ToString()" ValueChanged="(string value) => _applicationOptionsTimeSpanParser.TimespanTextChanged<Track, TimeSpan?>(EditedTrack, x => x.PostGap, value)" 
                                  Disabled="editModeTrackPostgap == DynamicEditValue.DoNotChange" Error="!String.IsNullOrEmpty(GetValidationErrorMessage(editModeTrackPostgap != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.PostGap)))"
                                  ErrorText="@GetValidationErrorMessage(editModeTrackPostgap != DynamicEditValue.DoNotChange, EditedTrack, nameof(Track.PostGap))" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Info" Variant="Variant.Filled" OnClick="SaveClick">@_localizer["Save changes"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    [Parameter]
    [EditorRequired]
    public Track EditedTrack { get; set; } = null!;

    DynamicEditValue editModeTrackIsLinkedToPreviousTrack, editModeTrackPosition, editModeTrackArtist, editModeTrackTitle, editModeTrackBegin, editModeTrackEnd, editModeTrackLength, editModeTrackFlags, editModeTrackPregap, editModeTrackPostgap;

    void SaveClick()
    {
        var result = new EditMultipleTracksModalResult(EditedTrack, editModeTrackIsLinkedToPreviousTrack, editModeTrackPosition, editModeTrackArtist, editModeTrackTitle, editModeTrackBegin, editModeTrackEnd, editModeTrackLength, 
                     editModeTrackFlags, editModeTrackPregap, editModeTrackPostgap);
        MudDialog?.Close(DialogResult.Ok(result));
    }

    String? GetValidationErrorMessage(Boolean changeActive, object model, string propertyName)
    {
        String? validationErrorMessage = null;
        if (changeActive)
        {
            var validationMessages = _validationService.Validate(model, propertyName);
            if (validationMessages.Count() > 0)
            {
                validationErrorMessage = String.Join(Environment.NewLine, validationMessages);
            }
        }
        return validationErrorMessage;
    }
}
