@inherits BaseLocalizedComponent

@inject IStringLocalizer<ViewModeFull> _localizer
@inject IDialogService _dialogService

<CascadingValue Value="ViewMode.DetailView">
    <MudExpansionPanels MultiExpansion>
        <MudExpansionPanel @bind-Expanded="cuesheetSectionsExpanded">
            <TitleContent>
                <MudText Typo="Typo.h5">@_localizer["Sections"]</MudText>
            </TitleContent>
            <ChildContent>
                <EditSections />
            </ChildContent>
        </MudExpansionPanel>
        <MudExpansionPanel @bind-Expanded="cuesheetDataExpanded">
            <TitleContent>
                <MudText Typo="Typo.h5">@_localizer["Common data"]</MudText>
            </TitleContent>
            <ChildContent>
                <CuesheetData />
            </ChildContent>
        </MudExpansionPanel>
        <MudExpansionPanel @bind-Expanded="cuesheetTracksExpanded">
            <TitleContent>
                <MudStack Row Justify="Justify.SpaceBetween" AlignItems="AlignItems.Baseline">
                    <MudText Typo="Typo.h5">@_localizer["Tracks"]</MudText>
                    <MudIconButton Icon="@Icons.Material.Outlined.Settings" OnClick="SettingsClicked" />
                </MudStack>
            </TitleContent>
            <ChildContent>
                <TrackList />
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>

    <AudioPlayer />
</CascadingValue>

@code {
    //TODO: maybe customize a bit more (background color, etc.)
    //TODO: Onclick of options
    //TODO: Tooltip options

    Boolean cuesheetSectionsExpanded = false;
    Boolean cuesheetDataExpanded = true;
    Boolean cuesheetTracksExpanded = true;

    void SettingsClicked()
    {
        var options = new DialogOptions() { CloseButton = true, CloseOnEscapeKey = true, BackdropClick = false };
        _dialogService.Show<EditTrackListOptionsDialog>(null, options);
    }
}
