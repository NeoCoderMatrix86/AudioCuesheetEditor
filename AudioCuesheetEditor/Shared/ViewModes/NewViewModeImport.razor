<MudCard Outlined>
    <MudCardContent>
        <MudField Label="Import data" Variant="Variant.Outlined">
            <MudTextField Lines="15" Placeholder="Please enter text or upload a file for import" @bind-Value="importText" FullWidth Underline="false" />
            <MudStack Row Justify="Justify.SpaceBetween">
                <MudButton Variant="Variant.Text" StartIcon="@Icons.Material.Outlined.UploadFile">
                    Upload File
                </MudButton>
                <MudButton Variant="Variant.Text" EndIcon="@Icons.Material.Outlined.NavigateNext">
                    Analyse data
                </MudButton>
            </MudStack>
        </MudField>
    </MudCardContent>
</MudCard>

