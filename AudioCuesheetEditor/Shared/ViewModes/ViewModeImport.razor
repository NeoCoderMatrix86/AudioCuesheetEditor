@inherits BaseLocalizedComponent

@inject IStringLocalizer<ViewModeImport> _localizer
@inject SessionStateContainer _sessionStateContainer
@inject ImportManager _importManager
@inject FileInputManager _fileInputManager

<CascadingValue Value="ViewMode.ImportView">
    <MudStepper OnPreviewInteraction="PreviewInteraction" @bind-ActiveIndex="activeStepIndex">
        <MudStep Title="@_localizer["Select files"]">
            <SelectImportFiles FilesImported="FilesImported" />
        </MudStep>
        <MudStep Title="@_localizer["Validate"]">
            <ValidateImport />
        </MudStep>
    </MudStepper>
</CascadingValue>

@code {
    //TODO
    //TODO: Localization
    //TODO: Options for import
    //TODO: Complete import button
    //TODO: Disable next button if not possible

    Dictionary<IBrowserFile, ImportFileType>? importedFiles;
    int activeStepIndex;

    Task PreviewInteraction(StepperInteractionEventArgs arg)
    {
        if (arg.StepIndex == 0)
        {
            arg.Cancel = importedFiles == null || importedFiles.Count == 0;
        }
        return Task.CompletedTask;
    }

    void FilesImported(Dictionary<IBrowserFile, ImportFileType> files)
    {
        importedFiles = files;
        activeStepIndex = 1;
    }
}
