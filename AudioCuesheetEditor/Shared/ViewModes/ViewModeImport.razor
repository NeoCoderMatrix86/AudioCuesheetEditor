@inherits BaseLocalizedComponent

@inject IStringLocalizer<ViewModeImport> _localizer
@inject ImportManager _importManager
@inject DialogManager _dialogManager
@inject ISessionStateContainer _sessionStateContainer

@if (IsAnalyzed == false)
{
    <TextField Placeholder="@_localizer["Please enter text or upload a file for import"]" Text="@importText" TextChanged="ImportTextChanged" />
    <Importprofiles />
    <MudFab Color="Color.Primary" Style="position:fixed; right:16px; bottom:16px; z-index:2000;" Label="@_localizer["Analyze"]" EndIcon="@Icons.Material.Outlined.NavigateNext"
            OnClick="Analyze" />
}
else
{
    <DisplayAnalyzedResult />

    <MudFab Color="Color.Warning" Style="position:fixed; left:16px; bottom:16px; z-index:2000;" Label="@_localizer["Back"]" StartIcon="@Icons.Material.Outlined.ArrowBack"
            OnClick="ResetAsync" />

    <MudFab Color="Color.Success" Style="position:fixed; right:16px; bottom:16px; z-index:2000;" Label="@_localizer["Import data"]" EndIcon="@Icons.Material.Outlined.CheckCircleOutline"
            OnClick="ImportData" />
}

@code {
    private string? importText;

    public Boolean IsAnalyzed
    {
        get => _sessionStateContainer.ImportIsAnalyzed;
        set => _sessionStateContainer.ImportIsAnalyzed = value;
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _importManager.UploadFilesFinished += ImportManager_UploadFilesFinished;
        SetImportText();
    }

    protected override void Dispose(bool disposing)
    {
        base.Dispose(disposing);
        _importManager.UploadFilesFinished -= ImportManager_UploadFilesFinished;
    }

    void ImportTextChanged(string? newImportText)
    {
        importText = newImportText;
        _importManager.ImportData(importText);
    }

    async Task Analyze()
    {
        await _dialogManager.ShowLoadingDialogAsync();
        try
        {
            await AnalyseImportfile();
        }
        finally
        {
            _dialogManager.HideLoadingDialog();
        }
        // Switch to analyzed data
        IsAnalyzed = true;
    }

    async Task AnalyseImportfile()
    {
        await _importManager.AnalyseImportfile();
    }

    void ImportData()
    {
        _importManager.ImportCuesheet();
        ResetAsync();
        // Don't await since otherwise the rendering will stop and this view will not be reset
        _ = LocalStorageOptionsProvider.SaveOptionsValueAsync<ViewOptions>(x => x.ActiveTab, ViewMode.DetailView);
    }

    void ResetAsync()
    {
        IsAnalyzed = false;
    }

    void ImportManager_UploadFilesFinished(object? sender, IEnumerable<string> invalidFiles)
    {
        SetImportText();
    }

    void SetImportText()
    {
        InvokeAsync(() =>
        {
            if (_sessionStateContainer.Importfile?.FileType == ImportFileType.Textfile)
            {
                importText = _sessionStateContainer.Importfile.FileContent;
                StateHasChanged();
            }
        });
    }
}
