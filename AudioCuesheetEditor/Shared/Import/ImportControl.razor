@inherits BaseLocalizedComponent

@inject IStringLocalizer<ImportControl> _localizer

<MudToolBar >
    <MudButton StartIcon="@Icons.Material.Outlined.RestartAlt" Variant="Variant.Filled" Color="Color.Warning" Disabled="RestartDisabled" OnClick="RestartClicked">@_localizer["Restart import"]</MudButton>
    <MudSpacer />
    <MudButton EndIcon="@Icons.Material.Outlined.Done" Variant="Variant.Filled" Color="Color.Success" Disabled="ImportDisabled" OnClick="ImportClicked">@_localizer["Import data"]</MudButton>
</MudToolBar>

@code {
    //TODO: Localization
    //TODO: Events for buttons
    [Parameter]
    public Boolean RestartDisabled { get; set; }

    [Parameter]
    public Boolean ImportDisabled { get; set; }

    [Parameter]
    public EventCallback RestartClicked { get; set; }

    [Parameter]
    public EventCallback ImportClicked { get; set; }
}
