    [CascadingParameter]
    public Cuesheet? Cuesheet { get; set; }

    void AddSectionClicked()
    {
        if (Cuesheet != null)
        {
            var section = Cuesheet.AddSection();
            TraceChangeManager.TraceChanges(section);
        }
    }
}
