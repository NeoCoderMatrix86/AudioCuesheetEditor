                    <Field Horizontal="true">
                        <FieldLabel ColumnSize="ColumnSize.Is4">@localizer["CDTitle"]</FieldLabel>
                        <FieldBody ColumnSize="ColumnSize.Is8">
                            <TextEdit @bind-Text="textImportFile.ImportCuesheet.Title" ReadOnly="true" />
