                                    @((MarkupString)chevronTextImportFileContent)
                                </div>
                            </Blazorise.Link>
                        </CollapseHeader>
                        <CollapseBody Style="background: lightgray;">
                            <Text>
                                @((MarkupString)String.Join("<br />", textImportFile.FileContentRecognized))
                            </Text>
                        </CollapseBody>
                    </Collapse>
                </Accordion>
                <Field Horizontal="true">
                    <FieldLabel ColumnSize="ColumnSize.Is4">
                        <Tooltip Placement="Placement.Top" Text="@localizer["EnterTextImportSchemeCuesheetTooltip"]">
                            @localizer["TextImportSchemeCuesheet"]
                        </Tooltip>
                    </FieldLabel>
                    <FieldBody ColumnSize="ColumnSize.Is8">
